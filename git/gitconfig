  editor = nvim
  excludesfile = ~/.gitignore
  autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  conflicted = !nvim +Conflicted
[color]
  ui = auto
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[merge]
  ff = only
[push]
  default = current
[fetch]
  prune = true
[rebase]
  autosquash = true
[pull]
  ff = only
[diff]
  colorMoved = zebra
