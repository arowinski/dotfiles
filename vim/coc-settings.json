{
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.previewAutoClose": true,
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "coc.preferences.colorSupport": true,
  "diagnostic.refreshOnInsertMode": true,
  "suggest.floatEnable": true,
  "suggest.noselect": false,
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.enablePreview": true,
  "suggest.enablePreselect": false,
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "•",
  "diagnostic.hintSign": "•",
  "diagnostic.signOffset": 999999,
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.checkCurrentLine": true,
  "signature.maxWindowHeight": 20,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": ["html", "json"],
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "stylelint.enable": true,
  "prettier.requireConfig": false,
  "prettier.stylelintIntegration": false,
  "prettier.eslintIntegration": true,
  "eslint.autoFixOnSave": true,
  "solargraph.diagnostics": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "solargraph.useBundler": true,
  "html.format.enable": true,
  "tsserver.formatOnType": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "javascript.jsx": "javascriptreact",
    "typescript.tsx": "typescriptreact",
    "eruby": "html"
  },
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "cSpell.enabledLanguageIds": [
    "go",
    "javascript",
    "javascriptreact",
    "markdown",
    "plaintext",
    "typescript",
    "typescriptreact",
    "yml",
    "ruby",
    "gitcommit",
    "json"
  ],
  "cSpell.showStatus": false,
  "cSpell.import": ["~/.config/nvim/spell/en.utf-8.add"]
}
