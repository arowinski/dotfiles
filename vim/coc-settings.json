{
  "coc": {
    "preferences": {
      "snippetIndicator": "",
      "diagnostic": { "displayByAle": true }
    }
  },
  "snippets": {
    "ultisnips": {
      "directories": ["UltiSnips", "plugged/vim-go/gosnippets/UltiSnips"]
    },
    "extends": {
      "javascriptreact": ["javascript"],
      "typescriptreact": ["javascript"],
      "typescript": ["javascript"]
    }
  },
  "suggest": { "noselect": true, "acceptSuggestionOnCommitCharacter": true },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
