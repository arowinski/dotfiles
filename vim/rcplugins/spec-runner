" Vim Spec Runner - Smart spec (rspec) runner

Plug 'gabebw/vim-spec-runner'

let g:spec_runner_dispatcher = "VtrSendCommand! bundle exec {command}"

map <Leader>t <Leader>vr <Plug>RunCurrentSpecFile
map <Leader>u <Leader>vr <Plug>RunFocusedSpec
map <Leader>y <Leader>vr <Plug>RunMostRecentSpec

" vim:ft=vim
