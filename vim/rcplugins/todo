" TypeScript

Plug 'aserebryakov/vim-todo-lists'

let g:VimTodoListsMoveItems = 0
let g:VimTodoListsDatesEnabled = 1
let g:VimTodoListsCustomKeyMapper = 'VimTodoListsCustomMappings'

function! VimTodoListsCustomMappings()
  nnoremap <buffer> s :VimTodoListsToggleItem<CR>
  nnoremap <buffer> O :VimTodoListsCreateNewItemAbove<CR>
  nnoremap <buffer> o :VimTodoListsCreateNewItemBelow<CR>
  nnoremap <buffer> <CR> :VimTodoListsCreateNewItem<CR>
  inoremap <buffer> <CR> <C-O>:VimTodoListsCreateNewItemBelow<CR>
  nnoremap <buffer> j :VimTodoListsGoToNextItem<CR>
  nnoremap <buffer> k :VimTodoListsGoToPreviousItem<CR>
  nnoremap <buffer> <Tab> :VimTodoListsIncreaseIndent<CR>
  nnoremap <buffer> <S-Tab> :VimTodoListsDecreaseIndent<CR>
  inoremap <buffer> <Tab> <C-o>:VimTodoListsIncreaseIndent<CR><C-o>$
  inoremap <buffer> <S-Tab> <C-o>:VimTodoListsDecreaseIndent<CR><C-o>$
  nnoremap <buffer> <C-j> :m +1<CR>
  nnoremap <buffer> <C-k> :m -2<CR>
  nnoremap <buffer> <silent> q :w<cr> :bd<cr>
  nnoremap <buffer> <Leader>l :bd<cr>
endfunction

nnoremap <Leader>l :vsp .todo<CR>

" vim:ft=vim
